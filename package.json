{
	"name": "@tv2media/inews",
	"version": "1.3.4",
	"description": "Connects to an Avid iNews server over FTP",
	"license": "MIT",
	"author": {
		"name": "John Murphy-Teixidor",
		"email": "johnvmt@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tv2/node-inews.git"
	},
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"test": "jest",
		"prepare": "husky install",
		"lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"prebuild": "trash dist",
		"build": "tsc -b tsconfig.build.json",
		"postbuild": "yarn copy-types",
		"copy-types": "copyfiles -f ./src/types/*.d.ts ./dist/types"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"dependencies": {
		"@types/ftp": "^0.3.33",
		"camelcase": "^6.0.0",
		"ftp": "0.3.x",
		"htmlparser": "^1.7.7",
		"unescape": "^1.0.1"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^2.4.0",
		"@types/jest": "^29.4.1",
		"@types/node": "^18.15.3",
		"copyfiles": "^2.4.1",
		"jest": "^29.2.2",
		"trash-cli": "^5.0.0",
		"ts-jest": "^29.0.5",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5"
	}
}
